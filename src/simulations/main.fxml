<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="540.0" prefWidth="1160.0" xmlns="http://javafx.com/javafx/9" xmlns:fx="http://javafx.com/fxml/1" fx:controller="simulations.Controller">
    <children>
        <MenuBar prefHeight="30.0" prefWidth="1280.0" VBox.vgrow="NEVER">
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem fx:id="loadmap" mnemonicParsing="false" onAction="#loadMaps" text="Load Map" />
                        <MenuItem fx:id="loadairport" disable="true" mnemonicParsing="false" onAction="#loadAirports" text="Load Airports" />
                        <MenuItem fx:id="loadflight" disable="true" mnemonicParsing="false" onAction="#loadFlights" text="Load Flights" />
                    </items>
                </Menu>
            <Menu mnemonicParsing="false" text="Edit" />
            <Menu mnemonicParsing="false" text="View" />
            <Menu mnemonicParsing="false" text="Help" />
            </menus>
        </MenuBar>
        <ToolBar prefHeight="30.0" prefWidth="1280.0">
            <items>
                <Label prefHeight="16.0" prefWidth="200.0" text="Simulated Time:" />
                <Label prefHeight="16.0" prefWidth="200.0" text="Total Aircraft:" />
                <Label prefHeight="16.0" prefWidth="200.0" text="Collisions" />
                <Label prefHeight="16.0" prefWidth="200.0" text="Landings" />
                <Label fx:id="timeLabel" prefHeight="16.0" prefWidth="200.0" text="time" />
            </items>
        </ToolBar>
      <HBox prefHeight="480.0" prefWidth="1280.0">
         <children>
            <GridPane fx:id="simulation" maxHeight="480.0" maxWidth="960.0" minHeight="480.0" minWidth="960.0" prefHeight="480.0" prefWidth="960.0">
            </GridPane>
            <VBox fx:id="logs" maxWidth="200.0" minHeight="480.0" minWidth="200.0" prefHeight="480.0" prefWidth="200.0" style="-fx-background-color: white; -fx-border-color: #00000010; -fx-padding: 10;" />
         </children>
      </HBox>
    </children>
</VBox>
